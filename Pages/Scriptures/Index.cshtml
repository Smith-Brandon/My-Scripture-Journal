@page
@model My_Scripture_Journal.IndexModel

@{
    ViewData["Title"] = "Index";
}
<div class="topOptionSection">
<h1>My Scriptures</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        Search by Book:
        <select asp-for="ScriptureBook" asp-items="Model.Books">
            <option value="">All</option>
        </select>
        <br><br>
        Sort by Date:
            <select asp-for="SortOption">
                <option value="" selected></option>
                <option value="asc">Oldest</option>
                <option value="des">Newest</option>
                <option value="book">Book</option>
            </select>
        <br><br>
    
        Search by Note:
        <input type="text" asp-for="SearchString" size="10" />
        <input type="submit" value="Filter" />
    </p>    
</form>
<form>
    <input type="submit" value="Reset" />
</form>
</div>
<br>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ScriptureModel[0].Book)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScriptureModel[0].Chapter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScriptureModel[0].Verse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScriptureModel[0].Notes)
            </th>
            <th>
                Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ScriptureModel)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Book)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Chapter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Verse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dateAdded)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
